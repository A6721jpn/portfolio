---
interface Props {
  trigger: string;
  approach: string;
  goal: string;
}

const { trigger, approach, goal } = Astro.props;
---

<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
  <div class="bg-mono-50 dark:bg-mono-900 border border-mono-200 dark:border-mono-800 p-6 rounded-lg">
    <h3 class="text-lg font-semibold mb-2 text-mono-700 dark:text-mono-300">Trigger</h3>
    <p class="text-sm text-mono-600 dark:text-mono-400">{trigger}</p>
  </div>
  <div class="bg-mono-50 dark:bg-mono-900 border border-mono-200 dark:border-mono-800 p-6 rounded-lg">
    <h3 class="text-lg font-semibold mb-2 text-mono-700 dark:text-mono-300">Approach</h3>
    <p class="text-sm text-mono-600 dark:text-mono-400">{approach}</p>
  </div>
  <div class="bg-mono-50 dark:bg-mono-900 border border-mono-200 dark:border-mono-800 p-6 rounded-lg">
    <h3 class="text-lg font-semibold mb-2 text-mono-700 dark:text-mono-300">Goal</h3>
    <p class="text-sm text-mono-600 dark:text-mono-400">{goal}</p>
  </div>
</div>
