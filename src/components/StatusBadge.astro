---
interface Props {
  status: 'Planning' | 'On-going' | 'Completed';
}

const { status } = Astro.props;

const colors = {
  'Planning': 'bg-gray-100 text-gray-800 border-gray-200 dark:bg-gray-800 dark:text-gray-300 dark:border-gray-700',
  'On-going': 'bg-blue-100 text-blue-800 border-blue-200 dark:bg-blue-900 dark:text-blue-200 dark:border-blue-800 ring-2 ring-blue-500/20',
  'Completed': 'bg-green-100 text-green-800 border-green-200 dark:bg-green-900 dark:text-green-200 dark:border-green-800',
};

const colorClass = colors[status] || colors['Planning'];
---

<span class={`text-sm font-bold px-4 py-1.5 rounded-full border shadow-sm ${colorClass}`}>
  {status}
</span>
