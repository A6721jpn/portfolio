---
import { NAV_ITEMS, SITE_TITLE } from '../consts';
---

<header class="border-b border-mono-200 dark:border-mono-800">
  <div class="container mx-auto px-4 py-4 flex justify-between items-center">
    <a href={import.meta.env.BASE_URL} class="text-xl font-bold tracking-tight">{SITE_TITLE}</a>
    <nav>
      <ul class="flex space-x-6">
        {NAV_ITEMS.map((item) => (
          <li>
            <a href={`${import.meta.env.BASE_URL}${item.href.replace(/^\//, '')}`} class="text-mono-600 hover:text-mono-900 dark:text-mono-400 dark:hover:text-mono-100 transition-colors">
              {item.label}
            </a>
          </li>
        ))}
      </ul>
    </nav>
  </div>
</header>
