---
import { NAV_ITEMS, SITE_TITLE } from '../consts';
import { getUrl } from '../utils/url';
---

<header class="border-b border-mono-200 dark:border-mono-800">
  <div class="max-w-7xl mx-auto px-4 py-4 flex justify-between items-center">
    <a href={getUrl('/')} class="text-4xl font-bold tracking-tight">{SITE_TITLE}</a>
    <nav>
      <ul class="flex space-x-6">
        {NAV_ITEMS.map((item) => (
          <li>
            <a href={getUrl(item.href)} class="text-lg font-medium text-mono-600 hover:text-mono-900 dark:text-mono-400 dark:hover:text-mono-100 transition-colors">
              {item.label}
            </a>
          </li>
        ))}
      </ul>
    </nav>
  </div>
</header>
