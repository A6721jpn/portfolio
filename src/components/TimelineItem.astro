---
interface Props {
  date: string;
  title: string;
}
const { date, title } = Astro.props;
---
<div class="mb-10 ml-6">
  <div class="absolute w-3 h-3 bg-mono-200 rounded-full mt-1.5 -left-1.5 border border-white dark:border-mono-900 dark:bg-mono-700"></div>
  <time class="mb-1 text-sm font-normal leading-none text-mono-400 dark:text-mono-500">{date}</time>
  <h3 class="text-lg font-semibold text-mono-900 dark:text-white mt-1">{title}</h3>
  <div class="mb-4 text-base font-normal text-mono-500 dark:text-mono-400">
    <slot />
  </div>
</div>
